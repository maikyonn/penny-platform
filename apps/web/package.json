{
	"name": "penny-platform",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "LIGHTNINGCSS_IGNORE_NATIVE=1 vite build",
		"start": "node build/index.js",
		"preview": "vite preview",
		"preview:local": "NODE_ENV=development bun run build -- --mode development && NODE_ENV=development vite preview --host --port 5193",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:unit": "vitest run tests/unit",
		"test:integration": "vitest run tests/integration",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"test:ci": "bun run test:unit && bun run test:integration",
		"test:all": "bun run test:ci && bun run test:e2e"
	},
	"devDependencies": {
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-node": "^5.2.2",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.0.0",
		"@testing-library/svelte": "^5.1.0",
		"@types/node": "^20",
		"@vitest/browser": "^3.2.3",
		"dotenv": "^16.4.5",
		"jsdom": "^24.0.0",
		"msw": "^2.6.7",
		"playwright": "^1.53.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"undici": "^6.19.8",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0",
		"whatwg-url": "^14.0.0"
	},
	"dependencies": {
		"firebase": "^11.0.0",
		"firebase-admin": "^13.5.0",
		"@stripe/stripe-js": "^8.1.0",
		"lightningcss": "^1.28.3",
		"stripe": "^19.1.0"
	}
}
