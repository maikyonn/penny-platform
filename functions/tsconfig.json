{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["src"],
  "exclude": ["src/__tests__", "**/*.test.ts", "**/*.spec.ts"]
}

