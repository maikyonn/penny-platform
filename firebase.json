{
  "hosting": [
    {
      "site": "penny-web",
      "public": "apps/web/build",
      "cleanUrls": true,
      "ignore": [
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/stripe/**",
          "function": "stripeWebhook"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "emulators": {
    "ui": {
      "enabled": true,
      "port": 9000
    },
    "auth": {
      "port": 9001
    },
    "functions": {
      "port": 9004
    },
    "firestore": {
      "port": 9002
    },
    "storage": {
      "port": 9003
    },
    "hosting": {
      "port": 9200
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs22"
    }
  ],
  "apphosting": {
    "backendId": "penni-web-backend",
    "rootDir": "apps/web",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions"
    ]
  }
}
