rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isMember(orgId) {
      return exists(/databases/(default)/documents/organizations/$(orgId)/members/$(request.auth.uid));
    }

    // User avatars
    match /avatars/{uid}/{file} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Campaign assets
    match /campaign-assets/{orgId}/{campaignId}/{file} {
      allow read: if isMember(orgId);
      allow write: if isMember(orgId);
    }

    // Proxied images cache
    match /proxies/{orgId}/{hash} {
      allow read: if isMember(orgId);
      allow write: if false; // Only backend can write
    }
  }
}

